<p style="color: green"><%= notice %></p>

<h1>Programming languages</h1>

<div id="programming_languages">
  <% @programming_languages.each do |programming_language| %>
    <%= render programming_language %>
    <p>
      <%= link_to "Show this programming language", programming_language %>
    </p>
    <p>
      <%= link_to "Destroy this programming language", programming_language, method: :delete %>
    </p>
    <p>
      <%= link_to "Edit this programming language", edit_programming_language_path(programming_language) %>
    </p>
  <% end %>
</div>

<%= link_to "New programming language", new_programming_language_path %>
